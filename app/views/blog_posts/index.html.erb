<h1>My Blog</h1>

<% @blog_posts.each do |blog_post| %>
  <div>
    <% if blog_post.draft? %>
      <div class="p2 rounded bg-gray-100 text-gray-900"> Draft </div>
    <% elsif blog_post.scheduled? %>
      <div class ="p2 rounded bg-blue-100 text-blue-900"> Scheduled </div>
    <% end %>
    <%= blog_post.content %>
  </div>
<% end %>

<div class="mt-16">
  <%== pagy_nav(@pagy) %>
</div>